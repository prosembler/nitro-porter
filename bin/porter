#!/usr/bin/env php
<?php
require_once dirname(__DIR__) . '/bootstrap.php';

// CLI app setup.
$app = new Ahc\Cli\Application('Nitro Porter', 'v'.APP_VERSION);

// Add commands.
$app->add(new Porter\Command\ListCommand());
$app->add(new Porter\Command\ShowCommand());
$app->add(new Porter\Command\RunCommand());
$app->add(new Porter\Command\PullCommand());

// Execute command.
$app->handle($_SERVER['argv']);
